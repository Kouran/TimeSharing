<%= form_for Message.new do |f| %>
      <ul>
      <% @message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
	
    <%= f.hidden_field(:sender, :value => current_user.nickname) %>
  </div>
  <div class="field">
    <%= f.label :receiver %><br>
	
    <%= f.text_field :receiver %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
