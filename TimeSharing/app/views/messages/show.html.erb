<%= stylesheet_link_tag "micro", media: "all"%>

<p id="notice"><%= notice %></p>

<p>
  <strong>Sender:</strong>
  <%= @message.sender %>
</p>

<p>
  <strong>Receiver:</strong>
  <%= @message.receiver %>
</p>

<p>
  <strong>Title:</strong>
  <%= @message.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @message.body %>
</p>



<%= link_to 'Back', '/messages' %>
<% if @message.receiver == current_user.nickname %>
<%= link_to 'Reply', "/messages/new/#{@message.sender}" %>
<% end %>
