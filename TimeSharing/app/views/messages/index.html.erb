<%= stylesheet_link_tag "micro", media: "all"%>

<h1>Listing messages</h1>
<%= form_tag(messages_path, :method => 'get', id: "search-form") do %>
          <p>
              <%= text_field_tag :search, params[:search], placeholder: "Search Messages" %>
              <%= submit_tag "Search" %>
          </p>
<% end %>
<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>

   		<% @messages.each do |message| %>
      <tr>
        <td><%= message.sender %></td>
        <td><%= message.receiver %></td>
        <td><%= message.title %></td>
        <td><%= message.body %></td>
        <td><%= link_to 'Show', message %></td>
      </tr>
    	<% end %>

  </tbody>
</table>

<%= link_to 'New Message', new_message_path %>
<%= link_to 'Report', "/admin_report"  %>
<%= link_to 'Back', "/"  %>
