<h1>Listing ads</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Description</th>
      <th>Zone</th>
      <th>Expected hours</th>
      <th>Deadline</th>
      <th>Request</th>
      <th>Closed</th>
      <th>Applicant user</th>
      <th>Fullfiller user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.title %></td>
        <td><%= ad.category %></td>
        <td><%= ad.description %></td>
        <td><%= ad.zone %></td>
        <td><%= ad.expected_hours %></td>
        <td><%= ad.deadline %></td>
        <td><%= ad.request %></td>
        <td><%= ad.closed %></td>
        <td><%= ad.applicant_user %></td>
        <td><%= ad.fullfiller_user %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ad', new_ad_path %>
