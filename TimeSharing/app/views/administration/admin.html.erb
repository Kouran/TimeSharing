<%= stylesheet_link_tag "micro", media: "all"%>

<head>
<title>Administration Page</title>
</head>
<body>
Administration
<br>
Delete User
<br>
<form action="/users/nick_destroy" method="post">
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	Nickname: <%= text_field_tag "nick" %>
	<br>
	<%= submit_tag("Delete User") %>
</form>
<br>
<hr>
<br>
<a href="/transactions">See Transactions</a>
<br>
<hr>
<br>
Wallet Update
<form action="/administration/wallet" method="post">
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	Nickname: <%= text_field_tag "nick" %>
	Amount to be added: <%= number_field_tag "amount" %>
	<br>
	<%= submit_tag("Update") %>
</form>
<br>
<hr>
<br>
<a href="/adminmessages">See received reports</a>
<br>
<hr>
<br>
Grant Permissions
<form action="/user_platform_data/permission" method="post">
	Nickname: <%= text_field_tag "nick" %>
	Permissions to grant (0: Unauthorized user, 1: Basic user, 2: Mod, 3: Administrator): <%= number_field_tag "permission", nil, min: 0, max: 3 %>
	<br>
	<%= submit_tag("Grant") %>
</form>
<br>
<hr>
<br>
<button action="/messagges/search">Search Messages</button>
</body>
