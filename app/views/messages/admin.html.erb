<%= stylesheet_link_tag "micro", media: "all"%>

<h1>Listing report</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>

   		<% @messages.each do |message| %>
      <tr>
        <td><%= message.sender %></td>
        <td><%= message.title %></td>
        <td><%= message.body %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    	<% end %>

  </tbody>
</table>

<br>
<%= link_to 'Back', "/"  %>
